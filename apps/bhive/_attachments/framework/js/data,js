/* I want to define a basic data model, that can save,validate,display its self. */

(function(){

	var bh = window.bh;
	
	bh.data = {};
	
	
	bh.data.types = {};
	
	bh.data.types.string = {
		name:"String data type",
		validator:function(element){
			return true;
		},
		entryWidget:bh.data.widgets.textbox,
		displayWidget:bh.data.widgets.span
	};
	
	bh.data.widgets = {};
	
	bh.data.widgets.textbox = function(ref,class_names,id){
		var template = "<input id=\"{id}\" class=\"{class}\">{data}</input>";
		
		
	};
	
	bh.data.widgets.span = function(ref,class_names,id){
		var template = "<span>{data}</span>";
		
		
	};
})();